{
  "name": "good-enough-scala-lsp",
  "description": "LSP extension to provide support for basic Scala definitions",
  "author": "Matt Dziuban <mrdziuban@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "version": "1.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrdziuban/vscode-good-enough-scala"
  },
  "publisher": "mrdziuban",
  "engines": {
    "vscode": "^1.23.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.scala"
  ],
  "main": "./client/out/extension",
  "scripts": {
    "clean": "(git ls-files -o -z | xargs -0 rm) && yarn",
    "compile": "yarn compile:client && yarn compile:server",
    "compile:client": "tsc -p ./client/tsconfig.json",
    "compile:server": "tsc -p ./server/tsconfig.json",
    "package": "vsce package --yarn",
    "postinstall": "cd client && yarn && cd ../server && yarn && cd ..",
    "vscode:prepublish": "cd client && yarn update-vscode && cd .. && yarn compile",
    "watch:client": "tsc -w -p ./client/tsconfig.json",
    "watch:server": "tsc -w -p ./server/tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "~10.3.1",
    "typescript": "~2.9.1",
    "vsce": "~1.42.0"
  }
}
